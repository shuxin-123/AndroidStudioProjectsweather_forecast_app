<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <!-- 日期（左侧固定宽度） -->
    <TextView
        android:id="@+id/item_center_tv_date"
        android:layout_width="60dp"
    android:layout_height="wrap_content"
    android:text="周六"
    android:textSize="16sp"
    android:maxLines="1"
    android:ellipsize="end" />

    <!-- 天气状况（日期右侧，动态宽度） -->
    <TextView
        android:id="@+id/item_center_tv_con"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="晴转多云有时有小雨"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toRightOf="@id/item_center_tv_date"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@id/item_center_tv_wind" />  <!-- 限制右侧边界 -->

    <!-- 风向（居中，动态调整位置） -->
    <TextView
        android:id="@+id/item_center_tv_wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="东南风3级"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_centerHorizontal="true" />

    <!-- 温度（右侧固定宽度） -->
    <TextView
        android:id="@+id/item_center_tv_temp"
        android:layout_width="80dp"
    android:layout_height="wrap_content"
    android:textSize="16sp"
    android:text="9~-1℃"
    android:maxLines="1"
    android:ellipsize="end"
    android:layout_alignParentRight="true" />

    <!-- 天气图标（温度左侧） -->
    <ImageView
        android:id="@+id/item_center_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_toLeftOf="@id/item_center_tv_temp"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true" />

    <!-- 分隔线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_below="@id/item_center_tv_date"
        android:layout_marginTop="5dp" />
</RelativeLayout>