<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 项目图片 -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/project_image"
            android:contentDescription="项目图片" />

        <!-- 项目标题 -->
        <TextView
            android:id="@+id/project_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <!-- 项目描述 -->
        <TextView
            android:id="@+id/project_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:layout_marginTop="8dp" />

        <!-- 进度条：明确指定为水平样式，并固定高度 -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:progress="63"
            android:max="100"
            android:progressDrawable="@drawable/custom_progress_bar"
            android:layout_marginTop="16dp"
            style="@android:style/Widget.ProgressBar.Horizontal" />


        <!-- 进度文本 -->
        <TextView
            android:id="@+id/project_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- 捐赠金额选择 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="选择捐赠金额"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/amount_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_horizontal">

                <RadioButton
                    android:id="@+id/amount_10"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="¥10"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:button="@null"
                    android:background="@drawable/amount_button"
                    android:layout_marginEnd="8dp" />

                <RadioButton
                    android:id="@+id/amount_50"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="¥50"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:button="@null"
                    android:background="@drawable/amount_button"
                    android:layout_marginEnd="8dp" />

                <RadioButton
                    android:id="@+id/amount_100"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="¥100"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:button="@null"
                    android:background="@drawable/amount_button"
                    android:layout_marginEnd="8dp" />

                <RadioButton
                    android:id="@+id/amount_200"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="¥200"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:button="@null"
                    android:background="@drawable/amount_button" />
            </RadioGroup>

            <EditText
                android:id="@+id/custom_amount"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="其他金额"
                android:inputType="number"
                android:padding="10dp"
                android:background="@drawable/amount_edit_text"
                android:layout_marginTop="12dp" />
        </LinearLayout>

        <!-- 捐赠人信息 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="填写捐赠人信息"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/donor_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="请输入您的姓名"
                android:padding="10dp"
                android:background="@drawable/input_field"
                android:layout_marginTop="12dp" />

            <EditText
                android:id="@+id/donor_phone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="请输入您的手机号"
                android:inputType="phone"
                android:padding="10dp"
                android:background="@drawable/input_field"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/donor_message"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="留言（选填）"
                android:padding="10dp"
                android:background="@drawable/input_field"
                android:layout_marginTop="8dp"
                android:gravity="top"
                android:maxLines="4" />
        </LinearLayout>

        <!-- 捐赠按钮 -->
        <Button
            android:id="@+id/donate_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="确认捐赠"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/donate_button"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp" />
    </LinearLayout>
</ScrollView>